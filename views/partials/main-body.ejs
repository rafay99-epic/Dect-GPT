<div class="form-container">
  <div class="left-column">
    <label for="my-textarea">Enter your text (max 2500 characters):</label>
    <textarea
      id="my-textarea"
      name="my-textarea"
      rows="10"
      cols="50"
      maxlength="2500"
    ></textarea>
    <div id="character-count"></div>
    <button type="submit" onclick="getOutput()">Submit</button>
  </div>
  <div class="right-column">
    <div id="output"></div>
    <div id="progress-bar-container">
      <label id="human-progress-label"></label>
      <progress id="human-progress-bar" value="0" max="100"></progress>
      <label id="ai-progress-label"></label>
      <progress id="ai-progress-bar" value="0" max="100"></progress>
    </div>
  </div>
</div>
